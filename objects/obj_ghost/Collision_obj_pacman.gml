if (frightened_timer == 0) {			// kill pacman if we're not frightened
	with (obj_pacman) {
		// lose a life
		global.lives--;
		if (global.lives == 0) {			// game over
			global.ghostmode = 0;
			
			obj_ghost.xdir = 0;
			obj_ghost.ydir = 0;
			
			instance_create_layer(x, y, "Instances", obj_realisticexplosion);
			instance_destroy(self);
		} else {
			xdir = 0;
			ydir = 0;
			
			instance_create_layer(x, y, "Instances", obj_realisticexplosion);
			
			x = xstart;
			y = ystart;
		}
	}
} else {								// we got eaten
	global.score += 100; 
	
	xdir = 0
	ydir = -1
	
	x = xstart;
	y = ystart;
	
	instance_create_layer(x, y, "Instances", obj_realisticexplosion);
	self.frightened_timer = 0;
}



























































































































































































































































































































